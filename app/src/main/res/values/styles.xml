<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    // Заголовок опции в настройках
    <style name="SettingTitles">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
    </style>

    // Разделитель линия в настройках
    <style name="DividerLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:background">@color/gray_3</item>
    </style>

    // Разделитель пробел в настройках
    <style name="DividerSpace">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:background">@color/transparent</item>
    </style>

    // Кнопка вызова подсказки
    <style name="ButtonHelp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:src">@drawable/ic_help_gray_16dp</item>
    </style>

    // Кнопка перехода на другой экран
    <style name="ButtonNext">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_next</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingEnd">25dp</item>
        <item name="android:paddingStart">25dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    // Кнопка отмены
    <style name="ButtonAfterNext">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_cancel</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:paddingEnd">25dp</item>
        <item name="android:paddingStart">25dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    // Переключатели
    <style name="SwitchBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    // Подсказки переключателей
    <style name="SwitchDescriptionStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">55dp</item>
    </style>

    // Подсказки заголовков
    <style name="TitleDescriptionStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:layout_marginBottom">18dp</item>
        <item name="android:layout_marginStart">5dp</item>
    </style>

</resources>
